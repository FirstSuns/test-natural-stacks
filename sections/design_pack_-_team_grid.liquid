                {%- endif -%}
              </div>
            </div>
          </div>
        {%- elsif block.type == 'text_block' -%}
          <div class="dsgn-pck__grid-item dsgn-pck__text-block dsgn-pck__block-{{ block.id }}" {{ block.shopify_attributes }} style="--dsgn-pck-animate: {{ forloop.index }}">
