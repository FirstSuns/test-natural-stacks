<div class="swiper-container">
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
      {% if forloop.index < starting %}
        {% continue %}
      {% endif %}
      <div class="swiper-slide" data-index={{ forloop.index0 }}>
        <div class="review-block">
          <div class="image">
            {% render 'responsive-image', image: block.settings.image, wrapper_class: 'mx-auto' %}
            {% if block.settings.image_text != blank %}
              <div class="sf__tes-image-text mt-2.5 text-sm not-change">
                {{ block.settings.image_text }}
              </div>
            {% endif %}
          </div>

          {% if big %} 
          <div class="sf__tes-desc mb-3 mt-6 rte showMobile">{{ block.settings.description }}</div>
          <div class="stars flex showMobile">
            {%- render 'testimonials__stars' -%}
          </div>
          {% endif %}
          <h3 class="sf__tes-title text-xl mb-2.5 font-medium not-change{% if big %} showMobile{% endif %}">{{ block.settings.title }}</h3>
          <div class="sf__tes-name not-change{% if big %} showMobile{% endif %}">{{ block.settings.author }}</div>
        </div>
      </div>
    {% endfor %}
    
    {% for block in section.blocks %}
      {% if forloop.index >= starting %}
        {% continue %}
      {% endif %}
      <div class="swiper-slide" data-index={{ forloop.index0 }}>
        <div class="review-block">
          <div class="image">
            {% render 'responsive-image', image: block.settings.image, wrapper_class: 'mx-auto' %}
            {% if block.settings.image_text != blank %}
              <div class="sf__tes-image-text mt-2.5 text-sm not-change">
                {{ block.settings.image_text }}
              </div>
            {% endif %}
          </div>

          {% if big %} 
          <div class="sf__tes-desc mb-3 mt-6 rteshowMobile">{{ block.settings.description }}</div>
          <div class="stars flex">
            {%- render 'testimonials__stars' -%}
          </div>
          {% endif %}
          <h3 class="sf__tes-title text-xl mb-2.5 font-medium not-change{% if big %} showMobile{% endif %}">{{ block.settings.title }}</h3>
          <div class="sf__tes-name not-change{% if big %} showMobile{% endif %}">{{ block.settings.author }}</div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>
{% render 'slider-controls', absolute: true %}